@page
@model ExamMagazinAspNetRazorPage.Pages.ProductRazorEditModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using ExamMagazinAspNetRazorPage.Pages

@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Редактирование товара</title>
</head>
<body>
    <h1>Изменение</h1>
    <!--форма редактирования клиента-->
    <form method="post">
        <label for="Id">ID:</label>
        <input id="id" name="id" type="number" readonly required value="@Model.Product.Id" />
        <!--номер продукта-->
        <label for="numberProduct">Номер продукта: </label>
        <input id="NumberProduct" name="Number" type="text" minlenght="1" required value="@Model.Product.Number" />
        <!--имя товара-->
        <label for="nameProduct">Имя продукта: </label>
        <input id="NameProduct" name="Name" type="text" minlenght="1" required value="@Model.Product.Name" />
        <!--количество товара-->
        <label for="quantityProduct">Кол-во товара: </label>
        <input id="QuantityProduct" name="Quantity" type="text" minlenght="1" required value="@Model.Product.Quantity" />
        <!-- цена за еденицу товара-->
        <label for="priceProduct">Кол-во товара: </label>
        <input id="PriceProduct" name="Price" type="text" minlenght="1" required value="@Model.Product.Price" />
        <!-- https://livebook.manning.com/book/asp-net-core-razor-pages-in-action/chapter-6/v-8/53-->
        <!--кнопка отправки формы-->
        <button>save</button>
    </form>
    <p> <a asp-page="ProductRazor"> перейти на таблицу клиентов</a></p>
</body>
