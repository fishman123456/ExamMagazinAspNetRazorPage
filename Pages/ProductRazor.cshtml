@page
@using ExamMagazinAspNetRazorPage.Models
@model ExamMagazinAspNetRazorPage.Pages.ProductRazorModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
}
<p>вы на странице продукты</p>
<a href="/Index">Стартовая страница</a>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Список клиентов</title>
    <style>
        .element-table {
            border-collapse: collapse;
            width: 100%;
        }

            .element-table th, .element-table td {
                border: 1px solid black;
                padding: 10px;
                text-align: center;
            }
    </style>
</head>
<body>

    <h1>Список заказов только для администратора</h1>

    <table class="element-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>код товара</th>
                <th>имя товара</th>
                <th>цена товара</th>
                <th>кол-во товара</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model.products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Number</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    
                    <td>
                        <a asp-page="/ProductRazorAdd" asp-route-id="@product.Id">Add</a>
                        <a asp-page="/ProductRazorDelete" asp-route-id="@product.Id">Delete</a>
                        <a asp-page="/ProductRazorEdit" asp-route-id="@product.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
